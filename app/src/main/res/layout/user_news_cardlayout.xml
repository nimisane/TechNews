<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/user_news_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/user_news_card_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_news_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_news"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/user_news_headlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#17202A"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_marginStart="3dp"
            android:ellipsize="end"
            android:text="News Headlines" />

        <LinearLayout
            android:id="@+id/user_news_card_linearlayout_reporter_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_news_card_author"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                android:textColor="#42A5F5"
                android:text="Reporter"
                />

            <TextView
                android:id="@+id/user_news_card_time"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="135dp"
                android:text="Time"
                android:textColor="#42A5F5"
                android:textSize="11sp" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/report_report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/report_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="0 users reported this article as incorrect"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>